#include <bits/stdc++.h>
using namespace std;


int main(){
    int t;
    cin >> t;
    for(int a0 = 0; a0 < t; a0++){
        int n;
        cin >> n;
        long long int sum=0;
        for(int i=0;i<=n;i++){
            sum+=i;
        }
        sum= pow(sum,2);
        //cout << sum << endl
        long long int sum2=0;
        for(int i=0;i<=n;i++){
            sum2+= pow(i,2);
        }
        cout << abs(sum-sum2) << endl;
    }
    return 0;
}

